rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Profile images - authenticated users can upload their own
    match /profile_images/{imageId} {
      allow read: if true; // Public read
      allow write: if request.auth != null; // Authenticated users can upload
    }
    
    // Harvest images - farmers can upload
    match /harvest_images/{imageId} {
      allow read: if true; // Public read
      allow write: if request.auth != null; // Authenticated users can upload
    }
    
    // Product images - farmers can upload
    match /product_images/{imageId} {
      allow read: if true; // Public read
      allow write: if request.auth != null; // Authenticated users can upload
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
